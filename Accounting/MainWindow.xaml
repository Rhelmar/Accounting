<Window x:Class="Accounting.MainWindow"
        x:Name="Plutos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Accounting"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="325" MinWidth="525"  Height="325" Width="525" KeyDown="OnPreviewKeyDown" SizeChanged="OnSizeChanged" >

    <Grid Background="Yellow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="189*"/>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="270*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="3" Margin="0,0,0.4,-0.2">
            <Menu DockPanel.Dock="Top" >
                <MenuItem Header="File">
                    <MenuItem Header="New">
                        <MenuItem Header="Company" Click="NewCompany"/>
                        <MenuItem Header="Account"/>
                    </MenuItem>
                    <MenuItem Header="Open" />
                    <MenuItem Header="Import" />
                    <Separator />
                    <MenuItem Header="Save" />
                    <MenuItem Header="Save As" />
                    <Separator />
                    <MenuItem Header="Close"/>
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header="Search" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <Frame x:Name="MainContent" Background="Gray"  HorizontalAlignment="Left" Grid.ColumnSpan="3" Margin="68,41,0,0.2" Width="450">

        </Frame>
    </Grid>
</Window>
