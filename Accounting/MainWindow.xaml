<Window x:Class="Accounting.MainWindow"
        x:Name="Plutos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Accounting"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="350" MinWidth="400"  Height="420" Width="480" KeyDown="OnPreviewKeyDown">
    <Grid>
        <DockPanel LastChildFill="True" Background="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Menu DockPanel.Dock="Top" Background="Gray">
                <MenuItem Header="File">
                    <MenuItem Header="New">
                        <MenuItem Header="Company" Click="NewCompany"/>
                        <MenuItem Header="Account"/>
                    </MenuItem>
                    <MenuItem Header="Open" />
                    <MenuItem Header="Import" />
                    <Separator />
                    <MenuItem Header="Save" />
                    <MenuItem Header="Save As" />
                    <Separator />
                    <MenuItem Header="Close"/>
                </MenuItem>
            </Menu>
                <Button Background="BlueViolet" Content="Left" DockPanel.Dock="Left" Width="50"/>
            <Frame x:Name="MainContent" Background="Yellow" DockPanel.Dock="Left" Content="Servus"/>
        </DockPanel>
    </Grid>
</Window>
