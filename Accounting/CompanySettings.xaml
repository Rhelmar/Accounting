<Window x:Class="Accounting.CompanySettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Accounting"
        mc:Ignorable="d"
        
        Title="Company" Height="500" Width="560" MinHeight="500" MinWidth="560" ResizeMode="CanResizeWithGrip" Closing="SettingsClosing" >
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Bottom">
            <Button Height="20" Width="100" HorizontalAlignment="Left" Margin="30,10" Content="Cancel" Background="#cc0000"/>
            <Button Height="20" Width="100"  Content="Next" Background="#00b300" HorizontalAlignment="Right" Margin="30,10"/>
        </Grid>
        <Frame x:Name="SettingContent" DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
